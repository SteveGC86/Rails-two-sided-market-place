<p id="notice"><%= notice %></p>

<h1>Shopping Lists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Item limit</th>
      <th>Delivered</th>
      <th>Delivered at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.user %></td>
        <td><%= shopping_list.item_limit %></td>
        <td><%= shopping_list.delivered %></td>
        <td><%= shopping_list.delivered_at %></td>
        <td><%= link_to 'Show', shopping_list %></td>
        <td><%= link_to 'Edit', edit_shopping_list_path(shopping_list) %></td>
        <td><%= link_to 'Destroy', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.shopping_list %>
  <%= link_to 'Edit Your Shopping List', shopping_list_path(current_user.shopping_list.id) %>
<% else %>
  <%= link_to 'New Shopping List', shopping_lists_path, method: :post %>
<% end %>

